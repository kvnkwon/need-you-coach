<nav class="top-bar" data-topbar role="navigation">
  <ul class="title-area">
    <li class="name">
      <h1><a href="/" class="site-logo">DBC-COACHES</a></h1>
    </li>
     <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
  </ul>

  <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right">
      <% if current_user && current_user.is_admin? %>
        <li><a href="/admin">ADMIN</a></li>
      <% end %>
      <% if current_user %>
        <li><a href="/request/new" data-reveal-id="new-request-modal">GET HELP</a></li>
        <li><a href="/logout">LOGOUT</a></li>
      <% else %>
        <li><a href="/login">LOGIN</a></li>
      <% end %>
    </ul>

    <!-- Left Nav Section -->
    <ul class="left">
      <li>
        <a href="/coaches">
          <% if @coaches.count == 0 %>
            NO COACHES AVAILABLE
          <% elsif @coaches.count == 1 %>
            <%= @coaches.count %> COACH AVAILABLE
          <% else %>
            <%= @coaches.count %> COACHES AVAILABLE
          <% end %>
        </a>
      </li>
    </ul>
  </section>
</nav>

<div id="new-request-modal" class="reveal-modal" data-reveal>
  <form action="/request/new" method="POST">
    <%= display_error %>
    <label>What phase are you in?</label>
    <select name="request[phase]">
      <option value = "1">1</option>
      <option value = "2">2</option>
      <option value = "3">3</option>
   </select>
    <label>I need help with:
      <input type="text" name="request[title]" /><br>
    </label>
    <label>What do you think is happening?
      <textarea type="text" name="request[problem_desc]" placeholder="Can you guess what might be happening with your code that is giving you a problem?"></textarea><br>
    </label>
    <label>What have you tried so far?
      <textarea type="text" name="request[tried_desc]" placeholder="Google? Stack overflow? What have you tried with your code?"></textarea><br>
    </label>
    <label>Challenge URL:
      <input type="text" name="request[url]" placeholder="OPTIONAL: Provide us the URL of the github challenge you are working on" /><br>
    </label>
    <button type="submit" class="button default" value="Submit">Help!</button>
  </form>
  <a class="close-reveal-modal">&#215;</a>
</div>

